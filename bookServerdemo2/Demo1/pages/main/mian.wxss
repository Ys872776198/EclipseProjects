/* pages/main/mian.wxss */
page {
  background-color: rgb(243, 243, 243);
  margin-bottom: 20px;
}

.mian-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 专题卡 */
.special-card {
  width: 95%;
  height: 150px;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 5px;
  margin-top: 10px;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}
.special-card .tag {
  border-radius: 5rpx;
  width: 35px;
  height: 16px;
  font-size: 28rpx;
  text-align: center;
  line-height: 18px;
  margin-top: 5px;
  margin-right: 5px;
  border: 1px solid #b0bec5;
  color: #b0bec5;
  align-self: flex-end;
}
